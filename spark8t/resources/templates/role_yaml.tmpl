apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  labels:
    app.kubernetes.io/managed-by: spark8t
  name: {{resourcename}}
  namespace: {{namespace}}
rules:
- apiGroups:
  - ""
  resources:
  - pods
  - configmaps
  - services
  - serviceaccounts
  - secrets
  verbs:
  - create
  - get
  - list
  - watch
  - delete
  - deletecollection
  - update
  - patch
- apiGroups:
  - ""
  resources:
  - secrets
  resourceNames:
  - spark8t-sa-conf-{{username}}
  verbs:
  - get
  - patch
  - update
- apiGroups:
  - ""
  resources:
  - secrets
  resourceNames:
  - configuration-hub-conf-{{username}}
  verbs:
  - get